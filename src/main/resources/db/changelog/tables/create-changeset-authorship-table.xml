<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="006" author="frolov">
        <createTable tableName="authorship">
            <column name="id" type="integer" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>

            <column name="author_id" type="int">
                <constraints nullable="false"/>
            </column>
            <column name="course_id" type="int">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addForeignKeyConstraint baseTableName="authorship" baseColumnNames="author_id"
                                 constraintName="authorship_author_id_fkey" referencedTableName="teacher"
                                 referencedColumnNames="id" onDelete="CASCADE"/>
        <addForeignKeyConstraint baseTableName="authorship" baseColumnNames="author_id"
                                 constraintName="authorship_author_id_fkey" referencedTableName="student"
                                 referencedColumnNames="id" onDelete="CASCADE"/>
        <addForeignKeyConstraint baseTableName="authorship" baseColumnNames="author_id"
                                 constraintName="authorship_author_id_fkey" referencedTableName="admin"
                                 referencedColumnNames="id" onDelete="CASCADE"/>

        <addForeignKeyConstraint baseTableName="authorship" baseColumnNames="course_id"
                                 constraintName="authorship_course_id_fkey" referencedTableName="course"
                                 referencedColumnNames="id" onDelete="CASCADE"/>
    </changeSet>
</databaseChangeLog>