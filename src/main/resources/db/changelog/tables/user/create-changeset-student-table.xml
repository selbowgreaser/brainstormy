<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="003" author="frolov">
        <createTable tableName="student">
            <column name="id" type="int" autoIncrement="true">
                <constraints primaryKey="true" />
            </column>

            <column name="login" type="varchar(32)">
                <constraints nullable="false"/>
            </column>
            <column name="password" type="varchar">
                <constraints nullable="false"/>
            </column>

            <column name="surname" type="varchar(64)">
                <constraints nullable="false"/>
            </column>
            <column name="name" type="varchar(64)">
                <constraints nullable="false"/>
            </column>
            <column name="patronymic" type="varchar(64)"/>
            <column name="email" type="varchar(64)">
                <constraints nullable="false"/>
            </column>
            <column name="phone" type="int"/>
            <column name="birthday" type="date">
                <constraints nullable="false"/>
            </column>

            <column name="created_at" type="timestamp">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="timestamp">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addForeignKeyConstraint baseTableName="student" baseColumnNames="group_id"
                                 constraintName="student_group_id_fkey" referencedTableName="group"
                                 referencedColumnNames="id" onDelete="SET NULL"/>
    </changeSet>
</databaseChangeLog>